{
  "id": null,
  "uid": "loki-logs-dashboard",
  "title": "Loki Logs Dashboard",
  "tags": ["loki", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "templating": {
    "list": [
      {
        "name": "service_name",
        "label": "Service Name",
        "type": "query",
        "datasource": "Loki",
        "query": "label_values(service_name)",
        "includeAll": true,
        "multi": true,
        "refresh": 1
      },
      {
        "name": "search_pattern",
        "label": "Search",
        "type": "textbox",
        "default": "",
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "type": "logs",
      "title": "Searchable Logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "{platform=\"docker\", service_name=~\"$service_name\"} |= \"$search_pattern\"",
          "refId": "A"
        }
      ],
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "dedupStrategy": "none"
      }
    },
    {
      "type": "timeseries",
      "title": "Log Volume Over One Minute",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 10 },
      "targets": [
        {
          "expr": "count_over_time({platform=\"docker\", service_name=~\"$service_name\"} [1m])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Total Log Lines (Last 24h)",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 18 },
      "targets": [
        {
          "expr": "count_over_time({platform=\"docker\", service_name=~\"$service_name\"} [24h])",
          "refId": "A"
        }
      ]
    }
  ]
}
